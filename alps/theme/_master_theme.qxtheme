<?xml version="1.0" encoding="utf-8"?>
<StyleSheet xmlns="http://querix.com">
  <ElementFilter ElementName="ScrollBar">
    <StyleSheet>
      <DoStyleAction>
        <SetProperty>
          <PropertyPath>
            <PropertyName>Wrapper</PropertyName>
          </PropertyPath>
          <PropertyValue type="Wrapper" Name="pseudo_table_scroller" />
        </SetProperty>
      </DoStyleAction>
    </StyleSheet>
  </ElementFilter>
  <ElementFilter ElementName="ComboBox">
    <StyleSheet>
      <DoStyleAction>
        <ApplyClass Name="hide-controls" />
      </DoStyleAction>
    </StyleSheet>
  </ElementFilter>
  <ElementFilter ElementName="Calendar">
    <StyleSheet>
      <DoStyleAction>
        <ApplyClass Name="hide-controls" />
      </DoStyleAction>
    </StyleSheet>
  </ElementFilter>
  <ElementFilter ElementName="TimeEditField">
    <StyleSheet>
      <DoStyleAction>
        <ApplyClass Name="hide-controls" />
      </DoStyleAction>
    </StyleSheet>
  </ElementFilter>
  <ElementFilter ElementName="TextArea">
    <StyleSheet>
      <DoStyleAction>
        <ApplyClass Name="hide-controls" />
      </DoStyleAction>
    </StyleSheet>
  </ElementFilter>
  <WithPseudoClassFilter PseudoClassName="Error">
    <StyleSheet>
      <DoStyleAction>
        <SetProperty>
          <PropertyPath>
            <PropertyName>Wrapper</PropertyName>
          </PropertyPath>
          <PropertyValue type="Wrapper" Name="popupError" Parameter=".qx-focused:not(.qx-element-role-ringmenu)" />
        </SetProperty>
      </DoStyleAction>
    </StyleSheet>
  </WithPseudoClassFilter>
