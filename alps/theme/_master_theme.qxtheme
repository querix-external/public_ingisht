  <WithPseudoClassFilter PseudoClassName="Comment">
    <StyleSheet>
      <DoStyleAction>
        <SetProperty>
          <PropertyPath>
            <PropertyName>Wrapper</PropertyName>
          </PropertyPath>
          <PropertyValue type="Wrapper" Name="popup" Parameter=".qx-focused" />
        </SetProperty>
      </DoStyleAction>
    </StyleSheet>
  </WithPseudoClassFilter>
   <DescendantFilter>
    <StyleSheet>
      <DoStyleAction>
        <SetProperty>
          <PropertyPath>
            <PropertyName>Font</PropertyName>
            <PropertyName>Family</PropertyName>
          </PropertyPath>
          <PropertyValue>
            <Name>Courier New</Name>
          </PropertyValue>
        </SetProperty>
      </DoStyleAction>
    </StyleSheet>
  </DescendantFilter>
   <ElementFilter ElementName="Window">
    <StyleSheet>
      <DoStyleAction>
        <SetProperty>
          <PropertyPath>
            <PropertyName>WindowStyle</PropertyName>
          </PropertyPath>
          <PropertyValue>Flat</PropertyValue>
        </SetProperty>
      </DoStyleAction>
    </StyleSheet>
  </ElementFilter>
